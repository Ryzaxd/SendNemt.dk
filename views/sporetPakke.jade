extends layout

block content
  .container
    h1 Din pakkes information
    div.info-container
      h2 Afsenders information
      p Afsenders navn: 
        span #{transaction.sender.name}
      p Afsenders adresse: 
        span #{transaction.sender.address}
    
    div.info-container
      h2 Modtagers information
      p Modtagers navn: 
        span #{transaction.recipient.name}
      p Modtagers adresse: 
        span #{transaction.recipient.address}

    div.info-container
      h2 Pakke information
      p Vægt: 
        span #{transaction.package ? transaction.package.weight : 'N/A'} kg
      p Mål (L x B x H i cm): 
        span #{transaction.package ? transaction.package.dimensions : 'N/A'}
      p Indhold: 
        span #{transaction.package ? transaction.package.contents : 'N/A'}
      p Værdi (kr): 
        span #{transaction.package ? transaction.package.value : 'N/A'}
      p Status: 
        span #{randomMessage}
        
    
    div.button-group
      a.button(href="/") Tilbage